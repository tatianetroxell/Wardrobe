@model IEnumerable<Wardrobe.Models.Accessory>

@{
    ViewBag.Title = "Index";
}

<h2>Accessories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-3">
            <div class="thumbnail">
                <div class="caption">
                    <img class="imgSize" src="@Url.Content(item.Photo)" />
                    <p><strong>@Html.DisplayNameFor(model => model.Name):</strong>&nbsp;@Html.DisplayFor(modelItem => item.Name)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Color):</strong>&nbsp;@Html.DisplayFor(modelItem => item.Color)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Season):</strong>&nbsp;@Html.DisplayFor(modelItem => item.Season)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Occasion):</strong>&nbsp;@Html.DisplayFor(modelItem => item.Occasion)</p>

                    <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AccessoryID }, new { @class = "btn btn-primary", role = "button" })
                    @Html.ActionLink("Details", "Details", new { id = item.AccessoryID }, new { @class = "btn btn-primary", role = "button" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.AccessoryID }, new { @class = "btn btn-primary", role = "button" })
                    </p>
                    <br><br>
                </div>
            </div>
        </div>
    }
</div>
